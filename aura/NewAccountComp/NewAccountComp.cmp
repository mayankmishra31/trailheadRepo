<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:actionOverride" access="global" >

    <lightning:card title="Add account">
        <div class="slds-p-around_medium">
            <lightning:recordEditForm objectApiName="Account" aura:id="createAccountForm" onsubmit="{!c.handleSubmit}">
                <lightning:messages />
                <lightning:inputField fieldName="Name"/>
                <lightning:inputField aura:id="ind" fieldName="Industry" onchange="{!c.toggleRequiredMark}"/>
                <lightning:inputField fieldName="Phone" class="customRequired"/>
                
                <lightning:inputField aura:id="txt" fieldName="Website"/>
                <lightning:button type="submit" name="Submit" label="submit" class="slds-m-top_medium"/>
            </lightning:recordEditForm>
        </div>
    </lightning:card>
</aura:component>